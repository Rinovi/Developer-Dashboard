<!--Home Content-->
<main class="my-8">
  <div class="bg-white">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:text-center">
        <h2 class="text-base font-semibold leading-7 text-indigo-600">Developer Dashboard</h2>
        <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">A Blogpost Site for developers</p>
        <p class="mt-6 text-lg leading-8 text-gray-600">Developer Dashboard is a specialized blogpost site tailored for
          developers, offering a centralized platform to publish technical articles, share coding insights, and
          collaborate within the developer community. It features tools for managing posts, in order to foster
          discussion on programming languages, frameworks, and software development practices.</p>
      </div>
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16">
          <div class="relative pl-16">
            <dt class="text-base font-semibold leading-7 text-gray-900">
              <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24">
                  <text x="50%" y="50%" fill="white" dominant-baseline="middle" text-anchor="middle">1</text>
                </svg>
              </div>
              Check Out the Homepage
            </dt>
            <dd class="mt-2 text-base leading-7 text-gray-600">Scroll or press 'View Posts' to explore articles, posts,
              and discussions shared by developers.</dd>
          </div>
          <div class="relative pl-16">
            <dt class="text-base font-semibold leading-7 text-gray-900">
              <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24">
                  <text x="50%" y="50%" fill="white" dominant-baseline="middle" text-anchor="middle">2</text>
                </svg>
              </div>
              Create Your account
            </dt>
            <dd class="mt-2 text-base leading-7 text-gray-600">Click 'Create Account' at the top right to make your own
              account. Or 'Sign In' if you already have one</dd>
          </div>
          <div class="relative pl-16">
            <dt class="text-base font-semibold leading-7 text-gray-900">
              <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24">
                  <text x="50%" y="50%" fill="white" dominant-baseline="middle" text-anchor="middle">3</text>
                </svg>
              </div>
              Add Your Own Post
            </dt>
            <dd class="mt-2 text-base leading-7 text-gray-600">Visit the dashboard to add a post of your own!</dd>
          </div>
          <div class="relative pl-16">
            <dt class="text-base font-semibold leading-7 text-gray-900">
              <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24">
                  <text x="50%" y="50%" fill="white" dominant-baseline="middle" text-anchor="middle">4</text>
                </svg>
              </div>
              Manage Your posts
            </dt>
            <dd class="mt-2 text-base leading-7 text-gray-600">You can also view, edit, or delete any of your posts
              after they've been created</dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
  <div class=" mt-10 flex items-center justify-center gap-x-6">
    <a href="#"
      class="scrollBtn rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">View
      Posts</a>
  </div>
  <div class="targetArticle flex justify-left p-20 grid grid-cols-1 md:grid-cols-3 gap-4">
    {{!-- Example post here --}}
     {{#each posts as |post| }}
    <article class="max-w-xl py-10">
      <div class="flex items-center gap-x-4 text-xs">
        <time datetime="2020-03-16" class="text-gray-500">
            {{post.postDate}}
            </time>
        {{!-- <a href="#"
          class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Edit</a>
        <a href="#" id="{{post.id}}"
          class="delete relative z-10 rounded-full bg-red-100 px-3 py-1.5 font-medium text-gray-600 hover:bg-red-200">delete</a> --}}
      </div>
      <div class="flex items-center gap-x-4 text-xs">

      </div>

      <div class="group relative">
        <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">

          <a href="/post-view/{{post.id}}">
            <span class="absolute inset-0"></span>
           {{post.postTitle}}
          </a>
        </h3>
        <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
            {{post.description}}
            </p>
      </div>
      <div class="relative mt-8 flex items-center gap-x-4">

        <div class="text-sm leading-6">
          <p class="font-semibold text-gray-900">
            <a href="#">
              <span class="absolute inset-0"></span>
              {{post.user.email}}
            </a>
          </p>
        </div>
      </div>
    </article>
    {{/each}}
  </div>
  </div>


</main>

